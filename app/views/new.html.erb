<h2>スケジュール新規作成</h2>

<%= form_for @task do |f| %>
   <table>
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>
     <tr>
       <th><%= f.label :start ,"開始日" %></th>
       <td><%= f.text_field :start %></td>
     </tr>
     <tr>
       <th><%= f.label :end ,"終了日" %></th>
       <td><%= f.text_field :end %></td>
     </tr>
     <tr>
       <th><%= f.label :allDay ,"終日" %></th>
       <td><%= f.text_field :allDay %></td>
     </tr>
     <tr>
       <th><%= f.label :memo ,"スケジュールメモ" %></th>
       <td><%= f.text_field :memo %></td>
     </tr>
   </table>
   
   <div>
     <ul>
       <li><%= f.submit "スケジュールを新規登録する" %></li>
       <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
     </ul>
   </div>
<% end %>