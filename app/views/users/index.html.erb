<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<header>
  <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>

  <h2>スケジュール一覧</h2>

 <% if flash.notice %>
   <p class="notice"><%= flash.notice %></p>
 <% end %>

 <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.start.to_s(:datetime_jp) %></td>
        <td><%= user.end.to_s(:datetime_jp) %></td>
        <td><%= user.allDay %></td>
        <td><%= user.update.to_s(:datetime_jp) %></td>
        <td><%= user.check %></td>
        <td><%= user.edit %></td>
        <td><%= user.delete %></td>
        <td>
          <%= link_to "確認", user %>
        </td>
        <td>
          <%= link_to "編集", [:edit, user] %>
        </td>
        <td>
          <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>
 
 <p><%= link_to "スケジュール新規登録", :new_user %></p>
 
 <footer>
   <h1>
     現在の日時：<%= Date.current.strftime(‘%Y年 %m月 %d日’) %>
   </h1>
 </footer>