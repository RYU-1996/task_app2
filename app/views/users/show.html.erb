<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.start %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @user.end %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @user.allDay %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    <li><%= link_to "スケジュールを編集する", :users %></li>
    <li><%= link_to "スケジュールを削除", :users %></li>
  </ul>
</div>

