<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<header>
  <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>

  <h2>スケジュール一覧</h2>

 <% if flash.notice %>
   <p class="notice"><%= flash.notice %></p>
 <% end %>

 <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start.to_s(:datetime_jp) %></td>
        <td><%= task.end.to_s(:datetime_jp) %></td>
        <td><%= task.allDay %></td>
        <td><%= task.update.to_s(:datetime_jp) %></td>
        <td><%= task.check %></td>
        <td><%= task.edit %></td>
        <td><%= task.delete %></td>
        <td>
          <%= link_to "確認", task %>
        </td>
        <td>
          <%= link_to "編集", [:edit, task] %>
        </td>
        <td>
          <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>
 
 <p><%= link_to "スケジュール新規登録", :new_task %></p>
 
 <footer>
   <h1>
     現在の日付：<%= Date.current.strftime(‘%Y年 %m月 %d日’) %>
   </h1>
 </footer>